<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTaikhoan"
        android:layout_width="match_parent"
        app:title="Tài khoản cả nhân"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="#03A9F4"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvIdtaikhoan"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="9"
                    android:text="12"
                    android:textColor="@color/white"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tvTentaikhoan"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="9"
                    android:text="Duc Thien"
                    android:textColor="@color/white"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/icons_acc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:text="Email"
            android:id="@+id/tvEmailtaikhoan"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:text="Dia chi"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tvDiachitaikhoan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:text="So dien thoai"
            android:id="@+id/tvSodienthoaitaikhoan"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:text="Đơn hàng đang giao"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:src="@drawable/transit"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:gravity="center|left"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:text="Đơn hàng thành công"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:src="@drawable/tickdouble"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ListView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</LinearLayout>