<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ThongtinkhActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Thông tin thanh toán"
        android:id="@+id/toolbarthongtinkh"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <TextView
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="Thông tin nhận hàng"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Tên khách hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edittexttenkhachhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Tỉnh "
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
                <Spinner
                    android:id="@+id/spinnerTinh"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="200dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Địa chỉ"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edittextdiachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Số điện thoai"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/edittextsdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/edittextemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="6"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Phí vận chuyển"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <Spinner
                    android:id="@+id/spinnerphivanchuyen"
                    android:layout_weight="4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="6"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Thanh toán"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
                <Spinner
                    android:id="@+id/spinnerthanhtooan"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/buttonxacnhan"
                android:textColor="@color/white"
                android:background="#FF5722"
                android:layout_margin="10dp"
                android:text="Xác nhận thanh toán"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>