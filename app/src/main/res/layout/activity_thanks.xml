<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activity.ThanksActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:src="@drawable/thanhcong" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/spinner"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Cảm ơn bạn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewtenkhachhang"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Cảm ơn bạn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Đặt hàng thành công"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Mã đơn hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewMadonhang"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ma don hang" />
    </LinearLayout>
    <TextView
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Vui lòng chuẩn bị số tiền cần thanh toán "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/textviewtongtienthanhcong"
        android:textSize="40dp"
        android:text="300000"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:layout_margin="10dp"
        android:id="@+id/buttontieptucmuahangthanhcong"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="#2196F3"
        android:layout_marginTop="60dp"
        android:text="Tiếp tục mua sắm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>